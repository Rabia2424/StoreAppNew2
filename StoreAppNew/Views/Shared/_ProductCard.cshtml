@model Product
@using StoreAppNew2.Infrastructer.Extensions


<div class="col-sm-12 col-md-4" col-xl-3>
    <div class="card my-2" style="width: 18rem;">
        <div class="card-header text-center">
            @Model.ProductName
        </div>

        <img src="@Model?.ImageUrl" class="card-img-top" alt="..." style="width:288px; height:220px">
        <div class="card-body">
            <p class="card-text">@Model?.Summary</p>
            <div class="d-flex justify-content-center">
                <div class="btn btn-group">
                    <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Get" asp-route-id="@Model.ProductId">
                        <i class="fa-solid fa-arrow-right"></i>
                        Get Details
                    </a>

                    <form id="@Model.ProductId" asp-page="/Cart" method="post">
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                        <button type="submit" class="btn btn-outline-secondary mx-1">
                            <i class="fa fa-cart-plus"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
